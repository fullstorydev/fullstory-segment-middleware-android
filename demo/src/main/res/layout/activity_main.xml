<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_product_viewed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_product_viewed" />

    <Button
        android:id="@+id/btn_viewed_checkout_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_viewed_checkout_step" />

    <Button
        android:id="@+id/btn_completed_checkout_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_completed_checkout_step" />

    <Button
        android:id="@+id/btn_order_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_order_completed" />

</LinearLayout>